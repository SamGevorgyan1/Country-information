<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/country_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textView"
        android:textIsSelectable="true"
        android:focusable="true"
        android:longClickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="5dp"
        android:text="Information"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/country_image" />

    <TextView

        android:layout_marginTop="40dp"
        android:layout_marginStart="38dp"
        android:id="@+id/country_Name"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:focusable="true"
        android:longClickable="true"
        android:textColor="@color/black"
        android:textIsSelectable="true"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toEndOf="@+id/country_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textIsSelectable="true"
        android:focusable="true"
        android:longClickable="true"
        android:id="@+id/textView_Capital"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Capital"
        android:textColor="#9C9C9C"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@id/country_Capital"
        app:layout_constraintEnd_toEndOf="@id/country_Capital"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toEndOf="@id/country_image"
        app:layout_constraintTop_toBottomOf="@id/country_Name" />

    <TextView
        android:id="@+id/country_Capital"
        android:textIsSelectable="true"
        android:focusable="true"
        android:longClickable="true"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/country_Name"
        app:layout_constraintStart_toStartOf="@id/country_Name"
        app:layout_constraintTop_toBottomOf="@+id/textView_Capital" />

    <TextView
        android:id="@+id/textVIew_CountryIndependenceDate"
        android:textIsSelectable="true"
        android:focusable="true"
        android:longClickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="Independence date"
        android:textColor="#9C9C9C"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/country_IndependenceDay"
        app:layout_constraintEnd_toEndOf="@id/country_IndependenceDay"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toEndOf="@id/country_image"
        app:layout_constraintTop_toBottomOf="@+id/country_Capital" />

    <TextView
        android:id="@+id/country_IndependenceDay"
        android:textIsSelectable="true"
        android:focusable="true"
        android:longClickable="true"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/country_Capital"
        app:layout_constraintStart_toStartOf="@id/country_Capital"
        app:layout_constraintTop_toTopOf="@+id/textVIew_CountryIndependenceDate" />

<ScrollView
android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:orientation="vertical"
    android:foregroundGravity="center"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView"
>
        <TextView
            android:id="@+id/countryInform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textIsSelectable="true"
            android:focusable="true"
            android:longClickable="true"

            app:layout_constraintVertical_bias="1.0"/>
</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>